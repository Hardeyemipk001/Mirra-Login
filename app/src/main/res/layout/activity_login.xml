<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:padding="24dp"
    android:background="@color/white"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mirra"
        android:fontFamily="@font/gabriela"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        android:textSize="30sp"
        android:textColor="#545DBA"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome Back!"
        android:fontFamily="@font/montserrat_alternates"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="50dp"
        android:textColor="@color/black"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/montserrat_alternates"
        android:text="Login into your account. Share glad tidings \nwith loved ones"
        android:textColor="@color/black"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"

        android:layout_marginTop="56dp"
        android:textColor="@color/black"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:ems="10"
        android:layout_marginTop="5dp"
        android:hint="email@example.com"
        android:paddingStart="10dp"
        android:textColorHint="#C4000000"
        android:background="@drawable/custom_input_login"
        android:inputType="textEmailAddress"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:ems="10"
        android:paddingStart="10dp"
        android:layout_marginTop="5dp"
        android:id="@+id/password_toggle"
        android:hint="*********"
        android:drawableEnd="@drawable/ic_visibility_off"
        android:paddingEnd="10dp"
        android:background="@drawable/custom_input_login"
        android:inputType="numberPassword"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgotten Password"
        android:layout_gravity="right"
        android:textColor="#545DBA"
        />
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="false"
        android:buttonTint="#545DBA"
        android:textColor="#545DBA"
        android:text="Remember me"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:textColor="@color/white"
        android:background="@drawable/sign_up"
        android:textAllCaps="false"
        android:layout_marginBottom="8dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:text="Login"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textColor="#545DBA"
        android:background="@drawable/sign_up_google"
        android:drawableStart="@drawable/ic_google"
        android:paddingLeft="80dp"
        android:textSize="16sp"
        android:paddingRight="80dp"
        android:textAllCaps="false"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:text="Sign Up with Google"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="45dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Don't have an Account?"
            android:textColor="@color/black"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Sign Up"
            android:onClick="signUpNav"
            android:textStyle="bold"
            android:textColor="#545DBA"
            />
    </LinearLayout>

</LinearLayout>