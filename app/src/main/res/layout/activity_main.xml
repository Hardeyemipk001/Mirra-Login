<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:padding="24dp"
    android:orientation="vertical"
    tools:context=".MainActivity">


<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/mText"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_above="@id/welcomeText"
        android:layout_marginStart="10dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="35dp"
        android:background="@drawable/mtextoval"
        android:fontFamily="@font/gabriela"
        android:paddingStart="17dp"
        android:paddingTop="10dp"
        android:text="M"
        android:textAlignment="inherit"
        android:textColor="#3F51B5"
        android:textSize="35sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to"
        android:id="@+id/welcomeText"
        android:textSize="24sp"
        android:layout_above="@id/mirraText"
        android:textColor="@color/white"
        />

    <TextView
        android:id="@+id/mirraText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/theMost"
        android:fontFamily="@font/gabriela"
        android:text="Mirra"
        android:textColor="@color/white"
        android:textSize="48sp" />

    <TextView
        android:id="@+id/theMost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/signUpBtn"
        android:layout_centerVertical="true"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/gabriela"
        android:text="The Most-used Social Media App"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <Button
        android:id="@+id/signUpBtn"
        android:layout_width="390dp"
        android:layout_height="43dp"
        android:layout_above="@id/loginBtn"
        android:layout_marginTop="110dp"
        android:background="@drawable/custom_button"
        android:onClick="signUpNav"
        android:text="Get Started"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <Button
        android:id="@+id/loginBtn"
        android:layout_width="390dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/custom_button2"
        android:onClick="loginNav"
        android:text="I already have an account"
        android:textAllCaps="false"
        android:textColor="@color/white" />
</RelativeLayout>




</LinearLayout>